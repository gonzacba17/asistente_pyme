FROM python:3.11-slim

WORKDIR /app

# Instalar Tesseract y dependencias
RUN apt-get update && apt-get install -y \
    tesseract-ocr \
    tesseract-ocr-spa \
    libtesseract-dev \
    && rm -rf /var/lib/apt/lists/*

# Copiar requirements
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copiar c√≥digo
COPY app.py .

# Exponer puerto
EXPOSE 5000

# Comando
CMD ["python", "app.py"]